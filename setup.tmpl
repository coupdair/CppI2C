<% skin web_skin %>
<% view message uses content::message extends master %>
<% template title() %>setup on <% include master::title() %><% end %>
<% template render() %>
<html>
  <body>
    <h1>device setup</h1>
    <form method="post" action="" >
      <fieldset>
      <legend><b>MC2SA</b></legend>
        <p>capacitors for <a href="https://en.wikipedia.org/wiki/Gain_(electronics)">gain</a>:
        <% form as_space infoMC2SAgain %>
        </p>
        <p>resistors for <a href="https://en.wikipedia.org/wiki/Negative_feedback">balancing feedback</a>:
        <% form as_space infoMC2SAresistor %>
        with R<sub>f</sub>=4.33MOhm, e.g. R<sub>f</sub> & 300k = 1MOhm
        </p>
        <% form as_p infoMC2SAdiscri %>
        <% form as_p infoMC2SAoffset %>
      </fieldset>
      <fieldset>
      <legend><b>ambiant temperature</b></legend>
        <% form as_p infoTemperature %>
      </fieldset>
      <% form as_p infoApply %>
    </form>
  </body>
<html>
<% end template %>
<% end view %>
<% end skin %>
